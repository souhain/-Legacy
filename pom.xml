	<name>intento1</name>
	<packaging>war</packaging>

	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
		<java.version>1.7</java.version>
		<springframework.version>4.2.3.RELEASE</springframework.version>
		<springframework.security.version>4.0.3.RELEASE</springframework.security.version>
		<aspectj.version>1.8.7</aspectj.version>
		<slf4j.version>1.7.13</slf4j.version>
		<openlegacy.version>3.5.0-RELEASE</openlegacy.version>
		<junit.version>4.12</junit.version>
		<jersey.version>1.19</jersey.version>
		
		<gateway.host></gateway.host>
		<gateway.user></gateway.user>
		<gateway.password></gateway.password>		
		<deploy.host></deploy.host>
		<deploy.user></deploy.user>
		<deploy.password></deploy.password>
